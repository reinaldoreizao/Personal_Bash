# RUN PACOTES SISTEM
# atualizar sudo apt get
update() {
  sudo apt update
  sudo apt upgrade -y
  sudo apt autoremove -y
  sudo apt autoclean
  sudo apt clean
}

# FUNCOES_SISTEM

RemoveDir() {
  sudo rm -r $1
  # remove diretorios como super_usuario
}

lf() {
  compgen -A function
  # listar todas funcoes no shell
}

lfn() {
  set | grep $1
  # listar todas funcoes por nome_passado : lfn "Deno"
}

