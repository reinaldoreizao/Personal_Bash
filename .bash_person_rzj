# CONFIGS DO .VIMRC ESTAO NO ARQUIVO PERSONALIZADO BASH EM : /$HOME/Personal_Bash/.bash_person_rzj
# explorador arquivos >> NERDTree :: c-n

# MUDAR LOCAL VIM_RC :: PARA PASTA Personal_Vim :: AO INVES DO .VIMRC NA RAIZ
export VIMINIT='source $MYVIMRC' # var que aponta o caminho de abertura do vim rc
export MYVIMRC='~/.config/nvim/init.lua'  # apontando o nvim
# export MYVIMRC='~/.vim/.vimrc'  # apontando caminho do vimrc que configura o vim.

# OBS: VARIAVEL $HOME == /home/rzj/

# COMANDOS PERSONAL
alias propag="source ~/.bashrc"

#
# ACESSOS COM CD $var:: Configurar com 'c' de explorer antes do <artefato> :: acessar: cd $oApelido
export cbash="$HOME/Personal_Bash"
export cvim="$HOME/.vim"
export clvim="$HOME/.config/lvim"
export cgit="$HOME/..git"
export cnvim="$HOME/.config/nvim"

#  MESTRAS :: CADA UM CRIAR A MESTRA - 'c' ABRIR - 'e' EDITAR
export epgm="$HOME/..pgm/"
export ebash="$HOME/Personal_Bash/"
export evscode="$HOME/.config/Code/User/"
export egitall="$HOME/..gitAll/"
export egitbase="$HOME/..Github_Base/"
export egitestes="$HOME/..gitAll/gitestes"
export epreferencias="$HOME/..gitAll/preferencias/"
export eimplementashow="$HOME/..gitAll/implementashow/"
export ebackups="$HOME/..backups/"
export etester="$HOME/..tester/"
export EDITOR_VIM="vim"
export EDITOR_NVIM="nvim"
export EDITOR_CODE="code"



# ABRIR :: ACESSO SEM CD, configurar add $ antes da MESTRA, usar: 'o' antes da var
alias opgm="cd $epgm"
alias obash="cd $ebash"
alias ogitall="cd $egitall"
alias ogitbase="cd $egitbase"
alias ogitestes="cd $egitestes"
alias obackups="cd $ebackups"
alias otester="cd $etester"
alias oimplementashow="cd $eimplementashow"
alias obash_rzj="cd ~/Personal_Bash"
alias ocpp="cd ~/..backend/cpp/"
alias onvim="cd ~/.config/nvim/"
alias otema_nvim="cd ~/.config/nvim/colors/"
alias ovim="cd ~/.vim/"
alias ovscode="cd $evscode"
alias opreferencias="cd $epreferencias"

# DUPLICAR OS ALIASES DE VIM PARA NVIM ::
# EDITAR ABRINDO COM O EDITOR_VIM CONFIGURADO, confg com 'n' antes da var
alias vvim="$EDITOR_VIM $cvim/.vimrc"
alias vtester="$EDITOR_VIM $TESTER_TS"
alias vpgm="$EDITOR_VIM $epgm"
alias vnotas="$EDITOR_VIM $epgm/_notas/"
alias vbash="$EDITOR_VIM $cbash/.bash_person_rzj"
alias vtema="$EDITOR_VIM ~/.config/nvim/colors/"

# EDITAR ABRINDO COM O EDITOR_NVIM CONFIGURADO, confg com 'n' antes da var
alias nnvim="$EDITOR_NVIM ~/.config/nvim/init.lua"
alias ntester="$EDITOR_NVIM $TESTER_TS"
alias npgm="$EDITOR_NVIM $epgm"
alias nnotas="$EDITOR_NVIM $epgm/_notas/"
alias nbash="$EDITOR_NVIM $cbash"
alias ntema="$EDITOR_NVIM ~/.config/nvim/colors/"

# EDITAR ABRINDO COM O VSCODE CONFIGURADO, confg com 'c' antes da var
alias cbash_rzj="$EDITOR_CODE ~/Personal_Bash/.bash_person_rzj"
alias cnvim="$EDITOR_CODE ~/.config/nvim/init.lua"
alias cpgm="$EDITOR_CODE $epgm"
alias cnotas="$EDITOR_CODE $epgm/_notas/"
alias cbash="$EDITOR_CODE $cbash/.bash_person_rzj"
alias ctema="$EDITOR_CODE ~/.config/nvim/colors/"

# FUNCOES_RZJ
lf() {
  compgen -A function
  # listar todas funcoes no shell
}

lfn() {
  set | grep $1
  # listar todas funcoes por nome_passado : lfn "Deno"
}

DenoRunGql() {
  deno run --allow-net --allow-read --allow-env $1
}
# para usar chame a funcao e de o argumente o arquivo .ts a ser executado: ex: main.ts

DenoRun() {
  deno run --watch $1
}

DenoRunTest() {
  deno test --watch
}
