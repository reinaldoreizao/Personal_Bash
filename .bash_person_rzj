# ObservacaoGeral: para refletir as alteracoes propag no terminal que tiver usando seja ele do bash ou do vscode.

# sistema
# atualizar sudo apt get
update() {
  sudo apt update
  sudo apt upgrade -y
  sudo apt autoremove -y
  sudo apt autoclean
  sudo apt clean
}

# FUNCOES_RZJ

lf() {
  compgen -A function
  # listar todas funcoes no shell
}

lfn() {
  set | grep $1
  # listar todas funcoes por nome_passado : lfn "Deno"
}

# neste_atalho: rodar arquivoDeno em autoReload
  # uso: dr ARGUMENTAR_O_ARQUIVO
  # dar_todas_permissoes_com: -A, é abreviacao para o --allow-all
  # este_comandoOriginal_sem_atalho: deno run --watch --allow-net --allow-read --allow-env $1
  # parametro_para_argumentarem: $1

dr() {
  deno run --watch -A $1
}

dtj() { # deno test watch :com j o atalho : vai enxergar o import_map.json - nao precisa argumentar.
  deno test -A --watch --import-map import_map.json

  # obs: somente inserindo o -A de all que rodou todos os tests sem ele rodava somente 1 test

  # deno test --watch -A
  # deno test com watch
}

# denoTest_ImportMap
dt() {
  deno test -A --watch --import-map import_map.json

  # deno test watch :com j o atalho : vai enxergar o import_map.json - nao precisa argumentar.

  # obs: somente inserindo o -A de all que rodou todos os tests sem ele rodava somente 1 test

  # deno test --watch -A
  # deno test com watch
}

# denoTestNormal
dtn() {
  deno test --watch -A
}

# deno run watcom j de json no atalho :: vai enxergar o import_map.json - argumentar o arquivo há rodar.
drj() {
  deno run --watch -A --import-map import_map.json $1
}



