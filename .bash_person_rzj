# COMANDOS_ALIAS ==================================

#  MESTRAS :: CADA UM CRIAR A MESTRA - 'o' ABRIR - 'e' EDITAR
export pgm="$HOME/..programacao/"
export EDITOR="nvim"


# ABRIR :: ACESSO SEM CD
alias opgm="cd $pgm"
alias ncpp="cd ~/..backend/cpp/"
alias envim="$EDITOR ~/.config/nvim/"
alias onvim="cd ~/.config/nvim/"
alias config_tema="cd ~/.config/nvim/colors/"

# EDITAR
